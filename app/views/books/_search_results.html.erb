<style>
    img{
        max-width: 2rem;
    }
</style>

<h4><%= @searched_word  %></h4>

<!-- Show local database Results  -->
<% if @books != [] %>
    <% @books.each do |book| %>
        <div class="container">    
            <%= book.title %>
            ,
            <% if book.cover.attached? %>
                <%= image_tag(book.cover) %>
            <% end %>     
            <%= button_to "Add to my Library", add_book_to_user_books_path(:id => book.id), method: :post %>
        </div>
        <hr>
    <% end %>
<% end %>

<!-- Show Google Books Results -->
<% if @books == [] %>
    <% if @google_books != []  %>
    <% @google_books.each do |book| %>
        <div class="container">    
            <%= book["title"] %>
            ,
            <%# if book["imageLinks"]["thumbnail"].present? %>
                <%# image_tag(book["image-link"]) %>
            <%# end %>
        </div>
        <hr>
    <% end %>
    <% end %>
<% end %>

<% if books == [] && google_books == [] %>
    <p>No Resaults Found about <%= @search_string %></p>
<% end %>

