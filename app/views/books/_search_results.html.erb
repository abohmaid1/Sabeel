<style>
  img {
    max-width: 10rem;
  }
</style>
<!-- Show local database Results  -->
<% if @books != [] %>
  <% @books.each do |book| %>
    <div class="container">
      <%= book.title %> ,
      <% if !book.google_book_picture_tag.blank? %>
        <%= image_tag(book.google_book_picture_tag) %>
      <% end %>
      <%= button_to "Add to my Library", add_book_to_user_books_path(:id => book.id), method: :post %>
    </div>
    <hr />
  <% end %>
<% else %>
  <% if @google_books != [] %>
    <%@google_books.each do |book| %>
      <div class="container">
        <%= book["title"] %> ,
        <br>
        <%= book["authors"]  %>,
        <br>
        <%= book["description"]  %>
        <br>
        <% if book["imageLinks"].present? %>
          <% @cover_tag = book["imageLinks"]["thumbnail"] %>
          <%= image_tag(book["imageLinks"]["thumbnail"]) %>
        <% else %>
          <% @cover_tag = "" %>
          No Image To Show 
        <% end %>
        <br>
        <%= link_to "Add to my Library", add_book_to_database_books_path(title: book["title"], description: book["description"], cover_tag: @cover_tag), method: :get %>
      </div>
      <hr />
    <% end %>
  <% end %>
<% end %>
<!-- Show Google Books Results -->
<% if @books == [] %>
<% end %>
<% if !@ResaultFlag %>
  <p>No Resault about <%= @searched_word %></p>
<% end %>
