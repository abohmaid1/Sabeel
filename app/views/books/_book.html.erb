<div class="card" style="width: 18rem;">
  <% if !book.google_book_picture_tag.blank? %>
    <%= image_tag(book.google_book_picture_tag, style:"width: 150px;", class: "card-img-top") %>
  <% end %>
  <div class="card-body">
    <h5 class="card-title"><%= book.title %></h5>
    <p class="card-text">اسم الكاتب</p>
    <a href="#" class="btn btn-primary">تفاصيل</a>
    <div>
      <%= link_to "Edit this book", edit_book_path(book), class:"btn btn-warning" %>
      <%= button_to "remove this book", remove_book_from_user_books_path(:id => book.id), method: :delete,class: "btn btn-danger", data: {turbo_confirm: "Are you sure?"}%>
    </div>
  </div>
</div>
