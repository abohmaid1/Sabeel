<%= stylesheet_link_tag "forms"%>
<style>
  form{
    width: 100%;
    position: static;
  }
</style>
<h2 class="text-center">تغيير كلمة المرور</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, :html => {:class=>"form"}) do |f| %>
  <%= render "admins/shared/error_messages", resource: resource %>
  <div class="form-group password">
    <%= f.label :"كلمة السر" %>
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em>عدد الأحرف الأدنى <%= @minimum_password_length %></em>
    <% end %>
  </div>
  <div class="form-group password">
    <%= f.label :"تأكيد كلمة السر" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
  <div class="form-group">
    <%= f.label :"كلمة المرور الحالية" %>
    <%= f.password_field :current_password, autocomplete: "current-password" %>
    <i>(أدخل كلمة المرور الحالية للمتابعة)</i>
  </div>
  <div class="actions">
    <%= f.submit "تغيير" %>
  </div>
<% end %>
<%= javascript_include_tag('account.js') %>
