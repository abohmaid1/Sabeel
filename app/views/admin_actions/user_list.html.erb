<div class="container mt-4">
  <table class="table table-hover table-bordered">
    <thead class="table-dark">
      <tr>
        <th>ID</th>
        <th>Username</th>
        <th>Email</th>
        <th>Number of Books</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <% if user.access_locked?%>
          <tr class="table-danger">
          <% else %>
            <tr class="table-success">
            <% end %>
            <td><%= user.id %></td>
            <td><%= user.username %></td>
            <td><%= user.email %></td>
            <td><%= user.books.count %></td>
            <% if user.access_locked? %>
              <td> <%= button_to "Unlock Account", unlock_user_path(user), method: :post %></td>
            <% else %>
              <td><%= button_to "Lock Account", lock_user_path(user), method: :post %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
