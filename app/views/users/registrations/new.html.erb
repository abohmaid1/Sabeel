 <%= stylesheet_link_tag "account"%>
<style>
  body{
    font-family: 'Marhey', sans-serif;
  }
  input {
    font-family: 'Marhey', sans-serif;
  }
</style>
<div class="container-fluid">
  <div class="row justify-content-center align-items-center" style="height: 100vh;">
    <div class=" mx-auto">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <h2>إنشاء حساب</h2>
        <div class="form-group fullname">
          <label for="fullname">اسم المستخدم</label>
          <%= f.text_field :username, autofocus: true, placeholder: "اسم المستخدم"%>
        </div>
        <div class="form-group email">
          <label for="email">البريد الالكتروني</label>
          <%= f.email_field :email, autocomplete: "email", placeholder: "البريد الالكتروني"%>
        </div>
        <div class="form-group date">
          <label for="date"> تاريخ الميلاد</label>
          <input type="date" id="date" placeholder="حدد تاريخ ميلادك">
        </div>
        <div class="form-group city">
          <label for="city">المحافظة</label>
          <%= f.collection_select(:location, SupportedGovernate.all, :id, :name) %>
        </div>
        <div class="form-group password">
          <label for="password">كلمة المرور</label>
          <%= f.password_field :password, placeholder: "كلمة المرور" %>
          <i id="pass-toggle-btn" class="fa-solid fa-eye"></i>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %>  محارف على أﻷقل)</em>
          <% end %>
        </div>
        <div class="form-group password">
          <label for="password">تأكيد كلمة المرور </label>
          <%= f.password_field :password_confirmation, placeholder: "كلمة المرور" %>
        </div>
        <div class="form-group submit-btn">
          <%= f.submit "Sign up" %>
        </div>
        <div class="form-group" style="top: 6px;">
          <span>هل تملك حساب ؟ 
            <%= link_to "تسجيل الدخول", new_user_session_path, style: "color: #9b3c27;" %>
          </span>
        </div>
      <% end %>
      <%= render "users/shared/error_messages", resource: resource %>
    </div>
  </div>
</div>
<%= javascript_include_tag('account.js') %>
