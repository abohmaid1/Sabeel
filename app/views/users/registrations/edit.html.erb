<%= stylesheet_link_tag "bookshelf"%>
<%=  stylesheet_link_tag "forms" %>
<div class="container">
  <div class="d-flex justify-content-evenly flex-wrap min-vh-100">
    <div class="col-md-6 form-container">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <h2>تعديل بياناتي</h2>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="form-group fullname">
          <label for="user_username">الاسم الثلاثي</label>
          <%= f.text_field :username, autofocus: true, autocomplete: "username" %>
        </div>
        <div class="form-group">
          <label for="user_email">البريد الالكتروني</label>
          <%= f.email_field :email, autocomplete: "email", :disabled => true %>
        </div>
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>
        <div class="form-group date">
          <label for="user_date"> تاريخ الميلاد</label>
          <% max_birthdate = 15.years.ago.to_date %>
          <%= f.date_field :birthdate, autocomplete: "birthdate", max: max_birthdate %>
        </div>
        <div class="form-group">
          <label for="user_location">محافظتك</label>
          <%= f.collection_select(:location, SupportedGovernate.all, :id, :name) %>
        </div>
        <div class="form-group">
          <label for="user_date">كلمة السر الجديدة</label><i>(دعه فارغا أن كنت لا ترغب في تغيير كلمة المرور)</i>
          <%= f.password_field :password, autocomplete: "new-password" %>
          <% if @minimum_password_length %>
            <em><%= @minimum_password_length %> أحرف على الأقل</em>
          <% end %>
        </div>
        <div class="form-group">
          <label for="user_password_confirmation">تأكيد كلمة المرور الجديدة</label>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
        <div class="form-group">
          <i>(ادخل كلمة المرور الحالية لتثبيت التغييرات)</i>
          <%= f.password_field :current_password, autocomplete: "current-password" %>
        </div>
        <div class="form-group submit-btn">
          <%= f.submit "تحديث بياناتي" %>
        </div>
      <% end %>
    </div>
    <div class="col-md-6 d-flex justify-content-center align-items-center bookshelf-col">
      <div class="container-book">
        <div class="book-shelf"style="box-sizing:content-box"></div>
        <div class="book" style="box-sizing:content-box"></div>
        <div class="book" style="box-sizing:content-box"></div>
        <div class="book" style="box-sizing:content-box"></div>
        <div class="book" style="box-sizing:content-box"></div>
        <div class="speech-bubble" style="box-sizing:content-box">
          <div class="heart"style="box-sizing:content-box"></div>
        </div>
        <div class="elephant" style="box-sizing:content-box">
          <div class="head" style="box-sizing:content-box">
            <div class="eye" style="box-sizing:content-box"></div>
            <div class="trunk" style="box-sizing:content-box">
              <div class="trunk-line" style="box-sizing:content-box"></div>
              <div class="trunk-line" style="box-sizing:content-box"></div>
              <div class="trunk-line" style="box-sizing:content-box"></div>
            </div>
          </div>
          <div class="body" style="box-sizing:content-box">
            <div class="leg leg-left" style="box-sizing:content-box"></div>
            <div class="leg leg-left leg-left-behind" style="box-sizing:content-box"></div>
            <div class="leg leg-right" style="box-sizing:content-box"></div>
            <div class="leg leg-right leg-right-behind" style="box-sizing:content-box"></div>
          </div>
        </div>
        <div class="plant" style="box-sizing:content-box">
          <div class="leaf" style="box-sizing:content-box"></div>
          <div class="leaf" style="box-sizing:content-box"></div>
          <div class="leaf" style="box-sizing:content-box"></div>
          <div class="stem" style="box-sizing:content-box"></div>
          <div class="pot-top" style="box-sizing:content-box"></div>
          <div class="pot-container" style="box-sizing:content-box">
            <div class="pot" style="box-sizing:content-box"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
