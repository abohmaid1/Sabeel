 <%= stylesheet_link_tag "account"%>
<div class="container-fluid">
  <div class="row  justify-content-center align-items-center" style="height: 100vh;">
    <div class=" mx-auto">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <h2> تسجيل دخول</h2>
        <div class="form-group email">
          <label for="user_email">البريد الالكتروني</label>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
        <div class="form-group password">
          <label for="user_password">كلمة المرور</label>
          <%= f.password_field :password, autocomplete: "current-password" %>
          <i id="pass-toggle-btn" class="fa-solid fa-eye"></i>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="form-group">
            <span>
              تذكر الحساب
              <%= f.check_box :remember_me %>
            </span>
          </div>
        <% end %>
        <div class="form-group submit-btn">
          <%= f.submit "افتح يا سمسم" %>
        </div>
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "نسيت كلمة السر", new_password_path(resource_name), style: "color: var(--secondary-color);"  %><br />
        <% end %>
        <div class="form-group">
          <p class="">ليس لديك حساب ؟ <%= link_to "إنشاء حساب", new_user_registration_path,  style: "color: #9b3c27;" %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>
<%= javascript_include_tag('login.js') %>
